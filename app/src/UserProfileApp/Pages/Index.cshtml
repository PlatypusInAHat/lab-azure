            line-height: 1.3;
        }

        .user-details {
            display: flex;
            flex-direction: column;
            gap: 14px;
        }

        .user-detail {
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        .user-detail-icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: linear-gradient(135deg, #ede9fe 0%, #f5f3ff 100%);
            display: flex;
