    List<User> users = new();



    Dictionary<int, string> pictureUrls = new();



    string healthStatus = "";



    string healthClass = "";



    string errorMessage = "";







    try



    {



        users = await DbContext.Users.AsNoTracking().ToListAsync();



        foreach (var user in users)

        {

            if (!string.IsNullOrEmpty(user.ProfilePicturePath))

            {

                // Always use proxy endpoint - works even when blob storage is private (Phase 2)

                // App Service is VNet-integrated and can access blob via private endpoint

                pictureUrls[user.Id] = $"/api/images/{user.ProfilePicturePath}";

            }

        }



        healthStatus = "ƒê√£ k·∫øt n·ªëi Azure SQL & Blob Storage";



        healthClass = "success";



    }



    catch (Exception ex)



    {



        healthStatus = "L·ªói k·∫øt n·ªëi - SQL ho·∫∑c Blob Storage kh√¥ng kh·∫£ d·ª•ng";



        healthClass = "error";



        errorMessage = ex.Message;



    }







    string GetInitials(string name)

    {



        var parts = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);



        if (parts.Length >= 2) return $"{parts[0][0]}{parts[^1][0]}".ToUpper();



        return name.Length >= 2 ? name[..2].ToUpper() : name.ToUpper();



    }







    string[] AvatarColors = { "#6366f1", "#8b5cf6", "#ec4899", "#f43f5e", "#f97316" };
}
<!DOCTYPE html>
<html lang="vi">

<head>
